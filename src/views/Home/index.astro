              />
            </div>
          ))}
        </div>
      </div>
      <div id="previewbrand" class="md:w-1/2 flex items-center justify-center md:order-1">
        <LazyImage
          src={brands[0].image}
          alt={brands[0].title}
          className="w-full h-auto object-contain"
          onload="this.parentNode.style.opacity = 1;"
          onerror="this.parentNode.style.opacity = 0;"
          onClick={(event) => {
            const target = event.target.closest('.logo-brand');
            if (target) {
              const brandIndex = brands.findIndex(brand => brand.title === target.dataset.brand);
              if (brandIndex !== -1) {
                this.src = brands[brandIndex].image;
              }
            }
          }}
        />
