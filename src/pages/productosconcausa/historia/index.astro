<style>
  /* Animaciones de entrada */
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(-30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 1s ease-out;
  }

  .animate-slide-up {
    opacity: 0;
    animation: slideUp 0.8s ease-out forwards;
  }

  /* Animaciones para items del timeline */
  .animate-timeline-item {
    opacity: 0;
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }

  .animate-timeline-item.visible {
    opacity: 1;
  }

  /* Alternar animaciones izquierda/derecha */
  .animate-timeline-item:nth-child(odd).visible {
    animation: slideInLeft 0.8s ease-out forwards;
  }

  .animate-timeline-item:nth-child(even).visible {
    animation: slideInRight 0.8s ease-out forwards;
  }

  /* Animaciones para especialidades */
  .animate-specialty {
    opacity: 0;
    transform: scale(0.8);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  .animate-specialty.visible {
    opacity: 1;
    transform: scale(1);
  }

  /* Delays escalonados para especialidades */
  .animate-specialty:nth-child(1) { transition-delay: 0.1s; }
  .animate-specialty:nth-child(2) { transition-delay: 0.15s; }
  .animate-specialty:nth-child(3) { transition-delay: 0.2s; }
  .animate-specialty:nth-child(4) { transition-delay: 0.25s; }
  .animate-specialty:nth-child(5) { transition-delay: 0.3s; }
  .animate-specialty:nth-child(6) { transition-delay: 0.35s; }
  .animate-specialty:nth-child(7) { transition-delay: 0.4s; }
  .animate-specialty:nth-child(8) { transition-delay: 0.45s; }
  .animate-specialty:nth-child(9) { transition-delay: 0.5s; }
  .animate-specialty:nth-child(10) { transition-delay: 0.55s; }
  .animate-specialty:nth-child(11) { transition-delay: 0.6s; }
  .animate-specialty:nth-child(12) { transition-delay: 0.65s; }

  /* Scroll suave */
  html {
    scroll-behavior: smooth;
  }
</style>

<script>
  // Intersection Observer para animar elementos al hacer scroll
  document.addEventListener('astro:page-load', () => {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    // Observar items del timeline
    const timelineItems = document.querySelectorAll('.animate-timeline-item');
    timelineItems.forEach(item => {
      observer.observe(item);
    });

    // Observar especialidades
    const specialties = document.querySelectorAll('.animate-specialty');
    specialties.forEach(specialty => {
      observer.observe(specialty);
    });

    // Observar secciones con slide-up
    const slideSections = document.querySelectorAll('.animate-slide-up');
    slideSections.forEach(section => {
      observer.observe(section);
    });
  });
</script>