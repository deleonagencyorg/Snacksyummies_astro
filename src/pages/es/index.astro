---
import MainLayout from '../../layouts/MainLayout.astro';
import { getLocale, t } from '../../i18n/i18n';
import ParallaxSection from '../../components/parallax/ParallaxSection.astro';
import ScrollReveal from '../../components/parallax/ScrollReveal.astro';

const locale = getLocale();
---

<MainLayout title="Taqueritos - Inicio">
  <div class="pt-20">
    <!-- Hero Section con Parallax -->
    <ParallaxSection 
      backgroundImage="/images/background.jpg"
      height="80vh"
      speed={-3}
      overlayColor="rgba(0,0,0,0.5)"
    >
      <div class="max-w-4xl mx-auto text-center">
        <ScrollReveal origin="top" delay={200} duration={1000}>
          <h1 class="text-5xl md:text-6xl font-title mb-6">Taqueritos</h1>
        </ScrollReveal>
        
        <ScrollReveal origin="bottom" delay={400} duration={1000}>
          <p class="text-xl md:text-2xl mb-8">Los mejores tacos con el auténtico sabor hondureño</p>
        </ScrollReveal>
        
        <ScrollReveal origin="bottom" delay={600} duration={1000}>
          <a href="#menu" class="bg-yellow-500 hover:bg-yellow-600 text-black font-bold py-3 px-8 rounded-full inline-block transition-all">
            Ver Menú
          </a>
        </ScrollReveal>
      </div>
    </ParallaxSection>
    
    <!-- Sección de Especialidades -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <ScrollReveal origin="left" distance="50px">
          <h2 class="text-4xl font-title text-center mb-12">Nuestras Especialidades</h2>
        </ScrollReveal>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <ScrollReveal origin="bottom" delay={200} duration={800}>
            <div class="bg-gray-100 rounded-lg overflow-hidden shadow-lg">
              <img src="/images/tacos1.jpg" alt="Tacos de carne asada" class="w-full h-64 object-cover" />
              <div class="p-6">
                <h3 class="text-2xl font-title mb-2">Tacos de Carne Asada</h3>
                <p class="text-gray-700">Deliciosos tacos de carne asada marinada con nuestro adobo especial.</p>
              </div>
            </div>
          </ScrollReveal>
          
          <ScrollReveal origin="bottom" delay={400} duration={800}>
            <div class="bg-gray-100 rounded-lg overflow-hidden shadow-lg">
              <img src="/images/tacos2.jpg" alt="Tacos al pastor" class="w-full h-64 object-cover" />
              <div class="p-6">
                <h3 class="text-2xl font-title mb-2">Tacos al Pastor</h3>
                <p class="text-gray-700">Auténticos tacos al pastor con piña y cilantro fresco.</p>
              </div>
            </div>
          </ScrollReveal>
          
          <ScrollReveal origin="bottom" delay={600} duration={800}>
            <div class="bg-gray-100 rounded-lg overflow-hidden shadow-lg">
              <img src="/images/tacos3.jpg" alt="Tacos de pescado" class="w-full h-64 object-cover" />
              <div class="p-6">
                <h3 class="text-2xl font-title mb-2">Tacos de Pescado</h3>
                <p class="text-gray-700">Frescos tacos de pescado con nuestra salsa especial de la casa.</p>
              </div>
            </div>
          </ScrollReveal>
        </div>
      </div>
    </section>
    
    <!-- Sección de Testimonios con Parallax -->
    <ParallaxSection 
      backgroundImage="/images/testimonials-bg.jpg"
      height="auto"
      speed={-2}
      overlayColor="rgba(0,0,0,0.7)"
    >
      <div class="py-20 container mx-auto px-4">
        <ScrollReveal>
          <h2 class="text-4xl font-title text-center mb-12">Lo que dicen nuestros clientes</h2>
        </ScrollReveal>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <ScrollReveal delay={200}>
            <div class="bg-white bg-opacity-10 backdrop-blur-sm p-6 rounded-lg">
              <p class="italic mb-4">"Los mejores tacos que he probado en Honduras. El sabor es incomparable."</p>
              <p class="font-bold">- María López</p>
            </div>
          </ScrollReveal>
          
          <ScrollReveal delay={400}>
            <div class="bg-white bg-opacity-10 backdrop-blur-sm p-6 rounded-lg">
              <p class="italic mb-4">"La salsa verde es increíble, siempre pido extra. ¡Altamente recomendado!"</p>
              <p class="font-bold">- Carlos Mendoza</p>
            </div>
          </ScrollReveal>
          
          <ScrollReveal delay={600}>
            <div class="bg-white bg-opacity-10 backdrop-blur-sm p-6 rounded-lg">
              <p class="italic mb-4">"Ambiente familiar y comida deliciosa. Los tacos al pastor son mi favorito."</p>
              <p class="font-bold">- Ana Rodríguez</p>
            </div>
          </ScrollReveal>
        </div>
      </div>
    </ParallaxSection>
    
    <!-- Sección de Contacto -->
    <section id="contacto" class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <ScrollReveal>
          <h2 class="text-4xl font-title text-center mb-12">Contáctanos</h2>
        </ScrollReveal>
        
        <div class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-8">
          <ScrollReveal origin="left">
            <div>
              <h3 class="text-2xl font-title mb-4">Información</h3>
              <p class="mb-2"><strong>Dirección:</strong> Calle Principal #123, Tegucigalpa</p>
              <p class="mb-2"><strong>Teléfono:</strong> (504) 2222-3333</p>
              <p class="mb-2"><strong>Email:</strong> info@taqueritos.hn</p>
              <p class="mb-6"><strong>Horario:</strong> Lunes a Domingo, 11:00 AM - 10:00 PM</p>
              
              <div class="flex space-x-4">
                <a href="#" class="text-gray-800 hover:text-yellow-500">
                  <span class="sr-only">Facebook</span>
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd" />
                  </svg>
                </a>
                <a href="#" class="text-gray-800 hover:text-yellow-500">
                  <span class="sr-only">Instagram</span>
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" clip-rule="evenodd" />
                  </svg>
                </a>
                <a href="#" class="text-gray-800 hover:text-yellow-500">
                  <span class="sr-only">Twitter</span>
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
                  </svg>
                </a>
              </div>
            </div>
          </ScrollReveal>
          
          <ScrollReveal origin="right">
            <form class="bg-gray-100 p-6 rounded-lg">
              <div class="mb-4">
                <label for="nombre" class="block text-gray-700 mb-2">Nombre</label>
                <input type="text" id="nombre" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500" />
              </div>
              
              <div class="mb-4">
                <label for="email" class="block text-gray-700 mb-2">Email</label>
                <input type="email" id="email" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500" />
              </div>
              
              <div class="mb-4">
                <label for="mensaje" class="block text-gray-700 mb-2">Mensaje</label>
                <textarea id="mensaje" rows="4" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500"></textarea>
              </div>
              
              <button type="submit" class="bg-yellow-500 hover:bg-yellow-600 text-black font-bold py-2 px-4 rounded-md transition-all">
                Enviar Mensaje
              </button>
            </form>
          </ScrollReveal>
        </div>
      </div>
    </section>
  </div>
</MainLayout>
