    position: relative;
  }
  
  .h-96 {
    height: 24rem;
  }
  
  .rounded-lg {
    border-radius: 0.5rem;
  }
  
  .overflow-hidden {
    overflow: hidden;
  }
  
  .w-full {
    width: 100%;
  }
  
