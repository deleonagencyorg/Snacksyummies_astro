---
import MainLayout from '../../layouts/MainLayout.astro';
import { getLocale, t } from '../../i18n/i18n';
import RellaxParallax from '../../components/parallax/RellaxParallax.astro';
import SimpleParallax from '../../components/parallax/SimpleParallax.astro';
import ParallaxSection from '../../components/parallax/ParallaxSection.astro';

const locale = getLocale();
---

<MainLayout title="Parallax Demo | Taqueritos">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-title text-center mb-8">Parallax Effects Demo</h1>
    
    <section class="mb-16">
      <h2 class="text-2xl font-title mb-4">1. Parallax with Rellax.js</h2>
      <p class="mb-8">Elements move at different speeds as you scroll.</p>
      
      <div class="relative h-[600px] bg-gray-100 overflow-hidden mb-8">
        <RellaxParallax speed={-5} class="absolute left-1/4 top-1/4 transform -translate-x-1/2 -translate-y-1/2">
          <div class="w-32 h-32 bg-red-500 rounded-full"></div>
        </RellaxParallax>
        
        <RellaxParallax speed={-3} class="absolute left-2/4 top-1/3 transform -translate-x-1/2 -translate-y-1/2">
          <div class="w-24 h-24 bg-blue-500 rounded-full"></div>
        </RellaxParallax>
        
        <RellaxParallax speed={-1} class="absolute right-1/4 top-1/2 transform -translate-x-1/2 -translate-y-1/2">
          <div class="w-40 h-40 bg-green-500 rounded-full"></div>
        </RellaxParallax>
        
        <RellaxParallax speed={2} class="absolute left-1/3 bottom-1/4 transform -translate-x-1/2 -translate-y-1/2">
          <div class="w-36 h-36 bg-yellow-500 rounded-full"></div>
        </RellaxParallax>
      </div>
    </section>
    
    <section class="mb-16">
      <h2 class="text-2xl font-title mb-4">2. Parallax with Images</h2>
      <p class="mb-8">Parallax effect applied to images with SimpleParallax.js</p>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div>
          <SimpleParallax 
            src="/images/tacos1.jpg" 
            alt="Grilled beef tacos"
            scale={1.8}
            orientation="up"
            transition="slow"
            class="h-80 rounded-lg"
          />
        </div>
        <div>
          <SimpleParallax 
            src="/images/tacos2.jpg" 
            alt="Al pastor tacos"
            scale={1.5}
            orientation="down"
            transition="medium"
            class="h-80 rounded-lg"
          />
        </div>
      </div>
    </section>
    
    <section class="mb-16">
      <h2 class="text-2xl font-title mb-4">3. Full Section with Parallax</h2>
      <p class="mb-8">A complete section with parallax background.</p>
      
      <ParallaxSection 
        backgroundImage="/images/background.jpg"
        height="600px"
        speed={-3}
        overlayColor="rgba(0,0,0,0.6)"
      >
        <div class="max-w-3xl mx-auto">
          <h2 class="text-4xl font-title mb-4">The Best Tacos in Honduras</h2>
          <p class="text-xl mb-6">Enjoy authentic Mexican flavors with a Honduran touch.</p>
          <a href="#" class="bg-yellow-500 hover:bg-yellow-600 text-black font-bold py-3 px-6 rounded-full inline-block">
            View Menu
          </a>
        </div>
      </ParallaxSection>
    </section>
    
    <section class="mb-16">
      <h2 class="text-2xl font-title mb-4">4. Elements with Different Speeds</h2>
      <p class="mb-8">Text and elements that move at different speeds.</p>
      
      <div class="relative py-32 bg-gray-100 overflow-hidden text-center">
        <RellaxParallax speed={-2} class="mb-8">
          <h3 class="text-3xl font-title text-green-600">Unmatched Flavor</h3>
        </RellaxParallax>
        
        <RellaxParallax speed={-1} class="mb-8">
          <p class="text-xl max-w-2xl mx-auto">Our tacos are made with fresh ingredients and traditional recipes.</p>
        </RellaxParallax>
        
        <RellaxParallax speed={1} class="mb-8">
          <div class="inline-block bg-yellow-400 text-black font-bold py-2 px-4 rounded-lg">
            Try them today!
          </div>
        </RellaxParallax>
      </div>
    </section>
  </div>
</MainLayout>
