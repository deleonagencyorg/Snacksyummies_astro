---
import Layout from '../../layouts/MainLayout.astro';
import { t } from '../../i18n/i18n';
import type { Locale } from '../../i18n/i18n';
import type { HeaderColorConfig } from '../../config/headerColors';
import Breadcrumb from '../../components/common/Breadcrumb/Breadcrumb.astro';
import { fade } from 'astro:transitions';

export interface Props {
  currentLang: Locale;
  headerColorConfig: HeaderColorConfig;
}

const { currentLang, headerColorConfig } = Astro.props;

// Get translations
const title = t('about_us.title', { namespace: 'common', locale: currentLang });
const subtitle = t('about_us.subtitle', { namespace: 'common', locale: currentLang });
const content = t('about_us.content', { namespace: 'common', locale: currentLang });
const metaDescription = t('meta.about_us.description', { namespace: 'common', locale: currentLang });
---

<Layout title={title} class="bg-white" description={metaDescription}>
  <!-- Hero section with background image -->
  <div class="hero-image relative">
    <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center">
      <h1 class="text-4xl md:text-6xl font-bold text-white text-center px-4">{title}</h1>
    </div>
  </div>
  
  <div class="container mx-auto px-4 pt-6">
    <Breadcrumb bgColor="bg-white" textColor="text-gray-600" hoverColor="hover:text-primary" />
    
    <div class="text-center mb-12" transition:animate={fade({ duration: '0.5s' })}>
      <h2 class="font-sans text-3xl font-bold mb-4 text-primary">{subtitle}</h2>
      <div class="w-24 h-1 bg-primary mx-auto mb-8"></div>
    </div>

    <div class="about-us-content max-w-4xl mx-auto mb-16">
      {Array.isArray(content) ? (
        content.map((paragraph) => (
          <p class="mb-6 text-lg text-gray-700 leading-relaxed">{paragraph}</p>
        ))
      ) : (
        <p class="mb-6 text-lg text-gray-700 leading-relaxed">{content}</p>
      )}
    </div>

    <div class="about-us-team mb-16">
      <!-- Team section can be added here in the future -->
    </div>
  </div>
</Layout>

<style>
  .about-us-header {
    padding: 4rem 1rem;
    background-color: var(--color-white);
    color: var(--color-primary);
  }

  .about-us-content {
    padding: 2rem 1rem 4rem;
  }

  @media (max-width: 768px) {
    .about-us-header {
      padding: 3rem 1rem;
    }
  }
  
  .container {
    max-width: 1200px;
    margin: 40px auto;
    padding: 0 20px;
  }
  
  .hero-image {
    width: 100%;
    height: 400px;
    background-image: url('https://snack.yummiespromociones.com/snacksyummies/about-us-hero.webp'), url('https://snack.yummiespromociones.com/snacksyummies/bgondas.webp');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    margin-bottom: 2rem;
  }
  
  @media (max-width: 768px) {
    .hero-image {
      height: 300px;
    }
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  // JavaScript functionality can be added here if needed
</script>
