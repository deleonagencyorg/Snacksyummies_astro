---
import Layout from '../../../layouts/MainLayout.astro';
import Header from '../../../components/common/Header/index.astro';
import Footer from '../../../components/common/Footer/index.astro';
import { type Locale, t } from '../../../i18n/i18n';
import Breadcrumb from '../../../components/common/Breadcrumb/Breadcrumb.astro';
import BlogCard from '../../../components/blog/BlogCard.astro';

interface Props {
  blogPost: {
    id: string;
    slug: string;
    title: string;
    content: string;
    image: string;
    author: string;
    published_date: string;
  };
  currentLang: Locale;
  allBlogPosts?: Array<{
    id: string;
    slug: string;
    title: string;
    summary: string;
    image: string;
    published_date: string;
  }>;
}

const { blogPost, currentLang, allBlogPosts = [] } = Astro.props;

// Filter out the current blog post and get up to 4 suggested posts
const suggestedPosts = allBlogPosts
  .filter(post => post.id !== blogPost.id)
  .slice(0, 4);

// Get the appropriate title based on language
const readMoreTitle = currentLang === 'es' ? 'Otras Noticias' : 'Other News';
---

<Layout title="Blog Detail" class="bg-white" description="Blog post details">
  <slot />
  
  <!-- Hero Image -->
  <div class="hero-container">
    <div class="hero-image"></div>
  </div>
  
  <div class="container mx-auto px-4 pt-6 my-6">
    <Breadcrumb bgColor="bg-white" textColor="text-gray-600" hoverColor="hover:text-gray-900" />
    
    <div class="max-w-3xl mx-auto my-6">
      <div class="mb-8">
      
   
        <h1 class="font-sans text-3xl font-bold mb-4">{blogPost.title}</h1>
      </div>
      
      <div class="relative h-96 mb-8 rounded-lg overflow-hidden my-6">
        <img 
          src={blogPost.image} 
          alt={blogPost.title}
          class="w-full h-full object-cover"
          loading="lazy"
        />
      </div>
      
      <div class="prose max-w-none">
        <Fragment set:html={blogPost.content} />
      </div>
    </div>
    
    {suggestedPosts.length > 0 && (
      <section class="mt-16 mb-12">
        <h2 class="text-gray-700 font-title text-xl md:text-6xl font-bold text-left mb-8">{readMoreTitle}</h2>
        <div class="grid grid-cols-4 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {suggestedPosts.map((post) => (
            <BlogCard 
              image={post.image}
              title={post.title}
              id={post.id}
              slug={post.slug || post.id}
            />
          ))}
        </div>
      </section>
    )}
  </div>
  
</Layout>

<style>
