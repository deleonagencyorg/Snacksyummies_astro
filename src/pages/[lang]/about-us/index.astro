---
import AboutUsView from '../../../views/AboutUs/index.astro';
import { type Locale } from '../../../i18n/i18n';
import { getHeaderColors } from '../../../config/headerColors';

export async function getStaticPaths() {
  const locales = ['en', 'es'];
  return locales.map((locale) => ({
    params: { lang: locale },
    props: { currentLang: locale as Locale }
  }));
}

const { currentLang } = Astro.props;

// Set header color config for white background and primary color text
const headerColorConfig = {
  backgroundColor: 'bg-white',
  textColor: 'text-primary',
  hoverTextColor: 'hover:text-primary-dark',
  hoverBackgroundColor: 'hover:bg-gray-100',
  showMessageCarousel: false
};
---

<AboutUsView currentLang={currentLang} headerColorConfig={headerColorConfig} />
