---
// Este archivo redirige automáticamente a la versión localizada (/es)
const defaultLocale = 'es';

// Redirigir a la versión localizada
Astro.redirect(`/${defaultLocale}/`);
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Redirigiendo...</title>
		<meta http-equiv="refresh" content={`0;url=/${defaultLocale}/`} />
	</head>
	<body>
		<p>Redirigiendo a <a href={`/${defaultLocale}/`}>/{defaultLocale}/</a>...</p>
	</body>
</html>
