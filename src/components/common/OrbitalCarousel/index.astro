---
import OrbitalProduct from './OrbitalProduct.astro';
import './styles.css';

interface Product {
  id: string;
  image: string;
  alt: string;
  link: string;
}

interface Props {
  products: Product[];
  class?: string;
}

const { products, class: className = '' } = Astro.props;
---

<div class={`orbital-carousel-container ${className}`}>
  <div class="orbital-carousel">
    <div class="orbital-center">
      <!-- Elemento central (puede ser un logo o un círculo decorativo) -->
      <div class="orbital-glow"></div>
    </div>
    <div class="orbital-products">
      {products.map((product, index) => (
        <OrbitalProduct 
          product={product} 
          index={index} 
          total={products.length} 
        />
      ))}
    </div>
  </div>
</div>



<script>
  // Importamos la función de inicialización del carrusel orbital
  import "./scripts.js";
</script>
