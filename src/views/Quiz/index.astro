          <div class="bg-red h-3 rounded-full transition-all duration-500 ease-out" 
               style="width: 20%" id="progress-bar"></div>
               <div class="w-full flex justify-center pt-4"> <span class="text-lg font-semibold text-white" id="progress-text">1 { '/'} {questions.length}</span></div>
        </div>
      </div>

      <!-- Quiz Content -->
      <div class="p-8">
        <!-- Question Container -->
        <div id="quiz-container">
          {questions.length > 0 ? (
            questions.map((question: any, index: number) => (
              <div class={`question-slide ${index === 0 ? 'active' : 'hidden'}`} data-question={index + 1}>
                <h2 class="text-2xl text-2xl text-white font-sans mb-8 text-center mt-8">
                  {question.question}
                </h2>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
                  {question.options.map((option: any) => (
                    <label class="option-card cursor-pointer group">
                      <input 
                        type="checkbox" 
                        name={`question-${question.id}`}
                        value={option.id}
                        class="hidden option-input"
                      />
                      <div class="p-4 bg-white border-4 border-gray-200 rounded-xl transition-all duration-300 hover:border-quinary hover:bg-gray-200 group-hover:shadow-md">
                        <div class="flex items-center space-x-3">
                          <div class="w-6 h-6 border-2 border-gray-300 rounded-md flex items-center justify-center transition-all duration-300 checkbox-indicator">
