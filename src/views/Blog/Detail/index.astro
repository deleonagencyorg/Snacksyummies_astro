  }
  
  @media (max-width: 768px) {
    .hero-image {
      height: 200px;
    }
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .max-w-3xl {
    max-width: 800px;
  }
  
  .mb-8 {
    margin-bottom: 2rem;
  }
  
  .text-sm {
    font-size: 0.875rem;
  }
  
  .text-gray-500 {
    color: #64748b;
  }
  
  .mb-2 {
    margin-bottom: 0.5rem;
  }
  
  .text-3xl {
    font-size: 1.875rem;
  }
  
  .font-bold {
    font-weight: 700;
  }
  
  .mb-4 {
    margin-bottom: 1rem;
  }
  
  .text-gray-600 {
