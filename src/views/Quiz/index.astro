        </div>

        <!-- Navigation Buttons - Centered below questions -->
        <div class="flex justify-center items-center pt-8 mt-4  gap-6">
          <!-- Previous Button -->
          <button 
            id="prev-btn"
            class="flex items-center justify-center w-14 h-14 border-2 border-white bg-quinary text-white rounded-full transition-all duration-300 hover:bg-primary/90 shadow-md disabled:opacity-50 disabled:cursor-not-allowed disabled:bg-gray-300"
            disabled
