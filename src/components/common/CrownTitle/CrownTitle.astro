---
// CrownTitle.astro - Component for titles with crown decoration
import { generalAssets } from '../../../config/assets';
import LazyImage from '../LazyImage.astro';
import './styles.css';

interface Props {
  title: string;
  subtitle: string;
  titleColor?: string;
  subtitleColor?: string;
}

const { 
  title, 
  subtitle, 
  titleColor = 'text-primary', 
  subtitleColor = 'text-gray-600' 
} = Astro.props;
---

<div class="crown-title-container">
  <LazyImage
    src={generalAssets.coronaIcon} 
    alt="" 
    class="crown-icon md:w-32 w-24"
    width="32"
    height="29"
    decorative={true}
  />
  <h1 class={`text-6xl md:text-8xl font-bold mb-2 font-title ${titleColor}`}>
    {title}
  </h1>
  <p class={`text-lg md:text-xl font-medium ${subtitleColor}`}>{subtitle}</p>
</div>

<script src="./script.js"></script>
